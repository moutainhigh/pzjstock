<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://code.alibabatech.com/schema/dubbo
    http://code.alibabatech.com/schema/dubbo/dubbo.xsd
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">

<!-- 使用disconf必须添加以下配置，请放在其他配置之前 -->
	<bean id="disconfMgrBean" class="com.baidu.disconf.client.DisconfMgrBean"
		destroy-method="destroy" lazy-init="false">
		<property name="scanPackage" value="com.pzj" />
	</bean>
	<bean id="disconfMgrBean2" class="com.baidu.disconf.client.DisconfMgrBeanSecond"
		init-method="init" destroy-method="destroy" lazy-init="false">
	</bean>
	 
	<!--配置更改会自动reload-->
	<bean id="configproperties_disconf" class="com.baidu.disconf.client.addons.properties.ReloadablePropertiesFactoryBean" lazy-init="false">
	    <property name="locations">
	        <list>
	            <value type="java.lang.String">classpath*:logback.xml</value>
	            <value type="java.lang.String">classpath*:dubbo.properties</value>
	            <value type="java.lang.String">classpath*:seat-overdue.properties</value>
	        </list>
	    </property>
	</bean>
	<bean id="propertyConfigurer"
	      class="com.baidu.disconf.client.addons.properties.ReloadingPropertyPlaceholderConfigurer" lazy-init="false">
	    <property name="ignoreResourceNotFound" value="true"/>
	    <property name="ignoreUnresolvablePlaceholders" value="true"/>
	    <property name="propertiesArray">
	        <list>
	            <ref bean="configproperties_disconf"/>
	        </list>
	    </property>
	</bean>

	<dubbo:application name="${dubbo.application.name}" />

	<!-- 库存服务注册中心 -->
	<dubbo:registry address="${dubbo.registry.address}"
		id="stock" />

	<dubbo:consumer check="false" />

	<dubbo:reference id="stockBottomService"
		interface="com.pzj.core.stock.service.StockBottomService" registry="stock"
		version="${dubbo.reference.version}" retries="${dubbo.reference.retries}"
		timeout="${dubbo.reference.timeout}" url="${dubbo.url}"/>
		
	<dubbo:reference id="seatRecordService"
		interface="com.pzj.core.product.service.SeatRecordService" registry="stock"
		version="${dubbo.reference.version}" retries="${dubbo.reference.retries}"
		timeout="${dubbo.reference.timeout}" url="${dubbo.url}"/>
</beans>